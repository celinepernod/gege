<div class="row">
  <h3 class="text-center text-green">Gégé, j'ai une nouvelle résa !</h3>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
    <h3 class="mt-">
      <%= @timeslot.activity.title %> -
      <%= l @timeslot.start_datetime, format: :custom %>
    </h3>
    <div class="row">
      <div class="col-xs-6">
        <p>
          Réservations:
          <%= @timeslot.total_participants %> / <%= @timeslot.activity.capacity %>
        </p>
      </div>
      <div class="col-xs-6">
        <p>Début: <%= l @timeslot.start_datetime, format: :time %></p>
      </div>
      <div class="col-xs-6">
        <p class="label label-primary">
          <%= t("activerecord.attributes.timeslot.statuses.#{@timeslot.status}") %>
        </p>
      </div>
      <div class="col-xs-6">
        <p>Fin: <%= l @timeslot.end_datetime, format: :time %></p>
      </div>
      <%= simple_form_for [@timeslot, @booking] do |f| %>
      <%= f.error_notification %>
      <div class="col-xs-9">
        <%= f.association :client,
              input_html: {
                class: 'selectpicker',
                title: 'Selectionnez un client',
                data: {
                  live_search: "true"
                }
              },
              include_hidden: false %>
      </div>
      <div class="col-xs-3">
        <a href="#" class="btn btn-primary mt">Nouveau</a>
      </div>
      <div class="col-xs-6">
        <%= f.input :adults, input_html: {value: '1', min: '0'} %>
      </div>
      <div class="col-xs-6">
        <%= f.input :children, input_html: {min: '0'} %>
      </div>
      <div class="col-xs-12">
        <%= f.input :comments %>
        <%= f.input :status, collection: booking_status_collection, selected: Booking::statuses.first %>
        <%= f.input :channel_source, collection: channel_sources_collection, selected: t("activerecord.attributes.booking.channel_sources.gege_call_center")  %>
        <%= f.submit "Valider", class: "btn btn-primary" %>
      </div>
      <% end %>
    </div>
  </div>
</div>


