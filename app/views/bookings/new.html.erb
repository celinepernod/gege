<div class="row">
  <h1 class="text-center">Gégé, j'ai une nouvelle résa !</h1>
  <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
      <h3><%= @timeslot.activity.title %> - <%= l @timeslot.start_datetime, format: :custom %></h3>
      <div class="row">
        <div class="col-xs-6">
          <p>Réservations: <%= @timeslot.total_participants %> / <%= @timeslot.activity.capacity %> </p>
        </div>
        <div class="col-xs-6">
          <p>Début: <%= l @timeslot.start_datetime, format: :time %></p>
        </div>
        <div class="col-xs-6">
          <p class="label label-primary"><%= t("activerecord.attributes.timeslot.statuses.#{@timeslot.status}") %></p>
        </div>
        <div class="col-xs-6">
          <p>Fin: <%= l @timeslot.end_datetime, format: :time %></p>
        </div>
        <%= simple_form_for [@timeslot, @booking] do |f| %>
            <%= f.error_notification %>
            <%= f.association :client %>
        <div class="col-xs-6">
            <%= f.input :adults %>
        </div>
        <div class="col-xs-6">
            <%= f.input :children %>
        </div>
            <%= f.input :comments %>
            <%= f.input :status, collection: booking_status_collection  %>
            <%= f.input :channel_source, collection: channel_sources_collection  %>
            <%= f.submit "Valider", class: "btn btn-primary" %>
          <% end %>
      </div>
  </div>
</div>




