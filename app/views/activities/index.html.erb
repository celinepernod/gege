<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <form action="#">
      <h1 class="text-center">Gégé, et mes activités ?</h1>
    </form>
  </div>
</div>
<div class="row">
    <% @activities.each do |activity| %>
      <div class="col-sm-6 col-md-4">
          <div class="activity">
            <%= link_to image_tag(activity.image), activity_path(activity) %>
            <div class="activity-body">
              <h2><%= link_to activity.title, activity_path(activity) %><h2>
              <h3><%= t("activerecord.attributes.activity.statuses.#{activity.status}") %></h3>
            </div>
          </div>
      </div>
    <% end %>
</div>
