<!-- Taille image (uploader lors de la création) / Vérifier la size -->
<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <form action="#">
      <h1 class="text-center">Voici votre activité en détail:</h1>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-2">
        <h4><strong> Mon activité :</strong> <%= @activity.title %></h4>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-2">
        <p><strong> Description :</strong><%= @activity.description %></p>
        <p><strong> Durée (min) :</strong> <%= @activity.duration_in_minutes %></p>
        <p><strong> Localisation :</strong> <%= @activity.meeting_point %></p>
        <p><strong> Capacité maximale :</strong> <%= @activity.capacity %></p>
        <p><strong> Prix adulte :</strong> <%= @activity.adult_price_cents %></p>
        <p> <strong> Prix enfant :</strong> <%= @activity.child_price_cents %></p>
  </div>
  <div class="col-xs-12 col-md-4 col-md-offset-1">
    <div class="row text-center">
      <%= cl_image_tag @activity.image, class: "card", height: 200, width: 300, crop: :fill %>
    </div>
    <div class="row text-center">
      <br>
      <%= link_to "Nouveau créneau", href="/timeslots/new", class: "btn btn-primary" %>
    </div>
  </div>
</div>










